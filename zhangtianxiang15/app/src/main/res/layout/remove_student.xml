<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/beijing"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@mipmap/logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_remove_remove"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/button_radius_maincolor"
            android:text="移 除"
            android:textColor="#000"
            android:textSize="16dp" />

        <Button
            android:id="@+id/bt_remove_back"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/button_radius_maincolor"
            android:text="返 回"
            android:textColor="#000"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/textview_rounded"
                android:gravity="center"
                android:text="姓 名"
                android:textColor="#000"
                android:textSize="32dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/textview_rounded"
                android:gravity="center"
                android:text="学 号"
                android:textColor="#000"
                android:textSize="32dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/et_remove_name"
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:background="@drawable/textview_rounded"
                android:gravity="center"
                android:layout_weight="1"
                android:hint="展示姓名"
                android:textColor="#000"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/et_remove_id"
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:background="@drawable/textview_rounded"
                android:gravity="center"
                android:hint="展示学号"
                android:textColor="#000"
                android:textSize="22dp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/bt_remove_pre"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/button_radius_maincolor"
            android:text="上一条"
            android:textColor="#000"
            android:textSize="16dp" />

        <Button
            android:id="@+id/bt_remove_next"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/button_radius_maincolor"
            android:text="下一条"
            android:textColor="#000"
            android:textSize="16dp" />
    </LinearLayout>


</LinearLayout>